<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">

	<!-- Nome da Aplicação -->
	<display-name>AdministracaoWeb</display-name>
	
	<!-- Arquivo Inicial -->
	<welcome-file-list>
		<welcome-file>pages/public/login.xhtml</welcome-file>
	</welcome-file-list>

	<!-- Fase do Projeto -->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<!-- Tema do PrimeFaces -->
<!-- 	<context-param> -->
<!-- 		<param-name>primefaces.THEME</param-name> -->
<!-- 		<param-value>bootstrap</param-value> -->
<!-- 	</context-param> -->

	<!-- Configuração do JSF -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<!-- Tempo da Sessão -->
	<session-config>
		<session-timeout>
			10
		</session-timeout>
	</session-config>
	
	<!-- Tratamento de erros -->
	<error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/pages/public/semsessao.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>javax.faces.view.facelets.TagAttributeException</exception-type>
        <location>/pages/public/semsessao.xhtml</location>
    </error-page>

</web-app>